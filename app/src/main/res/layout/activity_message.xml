<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78BF74"
    tools:context=".MessageActivity">
    <TextView
        android:id="@+id/congratulate"
        android:layout_above="@id/placard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="CONGRATULATION!" />

    <RelativeLayout
        android:id="@+id/placard"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:background="@drawable/placard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv"
        android:layout_marginBottom="-20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Anda Lulus Dengan\nPersentase"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_above="@id/rating"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:text="Nilai"/>

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:isIndicator="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonprimaryblue"
        android:text="SELANJUTNYA"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>