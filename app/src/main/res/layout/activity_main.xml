<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iwak_mascout"
        android:layout_width="280dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/iwak_mascout" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_memulaibaru"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iwak_mascout"
        android:text="Belajar Budidaya Ikan\nDi Mana Saja dan Kapan Saja"
        android:textAlignment="center"
        android:textColor="#0A7D9A"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_memulaibaru"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sudahpunyaakun"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonprimaryblue"
        android:text="MEMULAI BARU"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_sudahpunyaakun"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonprimarygrey"
        android:text="SUDAH PUNYA AKUN"
        android:textStyle="bold"
        android:textSize="20sp" />

</RelativeLayout>