<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/tv_soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="ini adalah soalnya "/>

    <Button
        android:id="@+id/btn_pilih"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonprimarygreen"
        android:text="SELANJUTNYA"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_d"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_pilih"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonprimarygrey"
        android:text="JAWABAN D"
        android:textStyle="bold"
        android:textSize="15sp" />
    <Button
        android:id="@+id/btn_c"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_d"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonprimarygrey"
        android:text="JAWABAN D"
        android:textStyle="bold"
        android:textSize="15sp" />
    <Button
        android:id="@+id/btn_b"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_c"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonprimarygrey"
        android:text="JAWABAN D"
        android:textStyle="bold"
        android:textSize="15sp" />
    <Button
        android:id="@+id/btn_a"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_b"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonprimarygrey"
        android:text="JAWABAN D"
        android:textStyle="bold"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_benar"
        android:src="@drawable/jawaban_benar"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_salah"
        android:src="@drawable/jawaban_salah"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>