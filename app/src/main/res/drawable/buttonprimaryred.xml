<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/dark_red" />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="0dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#F44242" android:startColor="#F44242" />
                    <stroke android:width="0dp" android:color="#BABABA" />
                    <corners android:radius="10dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>